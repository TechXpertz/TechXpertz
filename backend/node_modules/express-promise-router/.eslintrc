{
  "env": {
    "node": true
  },
  "globals": {
    "Promise": true
  },
  "rules": {
    "curly": 2,
    "eqeqeq": 2,
    "wrap-iife": [
      2,
      "any"
    ],
    "no-use-before-define": [
      2,
      {
        "functions": false
      }
    ],
    "no-caller": 2,
    "no-undef": 2,
    "no-unused-vars": 2,
    "indent": [
      2,
      4
    ]
  }
}
